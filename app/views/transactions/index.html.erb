<div class="page">
    <div class="container">
        
        <%= render  "tools/messages" %>
        <div class="row" style="padding: 5vh;">
            <div class="col-md-3 col-md-offset-5">
                <%= link_to 'New Transaction', new_transaction_path, class:'btn-success btn-lg ' %>
            </div>
        </div>

        <div class="row">
            <h1 align=center>Transactions</h1>
        
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Producttype</th>
                  <th>Liters</th>
                  <th>Vehiclenumber</th>
                  <th>User</th>
                  <th>Image</th>
                  <th colspan="3">Actions</th>
                </tr>
              </thead>
            
              <tbody>
                <% @transactions.each do |transaction| %>
                
                  <tr>
                    
                    <td><%= transaction.productType %></td>
                    
                    <td><%= transaction.liters %></td>
                    <td><%= transaction.vehicleNumber %></td>
                    <td><%= transaction.user.firstname %> <%= transaction.user.lastname %></td>
                    <td><%= image_tag(transaction.image.small_thumb.url, alt: 'Image') if transaction.image?%></td>
                    <td><%= link_to 'Show', transaction, class:'btn-success btn-sm' %></td>
                    <td><%= link_to 'Edit', edit_transaction_path(transaction), class:'btn-primary btn-sm' %></td>
                    <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn-danger btn-sm' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            
            <br>
            
            
        </div>
        

        
    </div>
    
</div>