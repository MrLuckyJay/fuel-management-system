<div class="login" >

        <div class="row section">
                <div class="container">
                        
                        
                        <div class="col-md-12 mainlog">
                            <div class="row">
                                        <%= render  "tools/messages" %>
                                     
                                    <div class="col-md-6 col-xs-12" >
                                            
                                            <h1 style="padding-top:2vh; text-align:center;">Plese Login to Manage your Fuel Consumption</h1>


                                            <div class="card col-sm-8 col-sm-offset-2" style="padding: 4vh;margin-top:5vh; background:#11070770;margin-bottom: 35%; ">
                                                <%= form_for(:session, local: true, url:login_path) do |form| %>
                    
                      
                                                <div class="form-group">
                                                  <%= form.label :email %>
                                                  <%= form.email_field :email, class:'form-control',placeholder:'input your Email' %>
                                                </div>
                                              
                                                <div class="form-group">
                                                  <%= form.label :password %>
                                                  <%= form.password_field :password, class:'form-control', placeholder:'Input your Password',autocomplete:'off' %>
                                                </div>
                                        
                                                
                                              
                                                <div class="actions">
                                                  <%= form.submit'login', class:'btn btn-success btn-lg btn-block' %>
                                                </div>
                                              <% end %>
                                              
                                        </div>
                                    </div>
            
            
            
                                    <div class="col-md-6 hidden-xs">

                                        <div class="col-md-2" style="margin-top: 35vh">
                                                        <h1 style="color: white">OR</h1>
                                        </div>

                                        <div class="col-md-10 signup" style="margin-top: 35vh;  ">
                                                <%= link_to  "Sign up", signup_path,class:'btn btn-success btn-block btn-lg signup-link'  %>
                                        </div>

                                        
            
                    
                                   </div>
            
            
                
                            </div>
            
                                
                                
                                
            
                        </div>
                        
                </div>
            </div>
</div>