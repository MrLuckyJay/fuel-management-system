<div class="page">
  <div class="container">

    <%= render  "tools/messages" %>
    

    

    <div class="row">
    <h1 align=center>Users</h1>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Email</th>
          <th>Is_Staff</th>
          <th>Is_Admin</th>
          <th>Profile Pic</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td><%= user.email %></td>
          <td><%= user.is_staff %></td>
          <td><%= user.is_admin %></td>
          <td><%= image_tag(user.profile_pic.small_thumb.url, alt: 'Image') if user.profile_pic?%></td>
          <td><%= link_to 'Show', user, class:'btn-success btn-sm'%></td>
          <td><%= link_to 'Edit', edit_user_path(user),class:'btn-primary btn-sm' %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class:'btn-danger btn-sm' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>

    


  </div>
</div>