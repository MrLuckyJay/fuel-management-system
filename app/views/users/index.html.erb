<div class="page">
  <div class="container">

    <p id="notice"><%= notice %></p>

    

    <div class="row"></div>

    <h1 align=center>Users</h1>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Email</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user, class:'btn-success btn-sm'%></td>
          <td><%= link_to 'Edit', edit_user_path(user),class:'btn-primary btn-sm' %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class:'btn-danger btn-sm' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>

    


  </div>
</div>