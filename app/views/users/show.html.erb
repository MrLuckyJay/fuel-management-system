<div class="page">
  <div class="container">
      <div class="col-md-8 col-md-offset-2">
       <%= render  "tools/messages" %>
      

          

        <div class="" align=center style=" padding-top:5vh;">
          
          <%= link_to(image_tag(@user.profile_pic.thumb.url, alt: 'Image',class:'img-circle'), @user.profile_pic.url, target: '_blank') if @user.profile_pic? %>

        </div>
        
        <div class="user-detail" style="text-align: center;">
          <h2> <strong>Firstname:</strong>
            <%= @user.firstname %></h2>

          <h2> <strong>Lastname:</strong>
            <%= @user.lastname %> </h2>

            <h2> <strong>Email:</strong>
              <%= @user.email %> </h2>

              <%= link_to 'Edit Profile', edit_user_path(@user), class:'btn btn-success' %>

        </div>
      </div>
  </div>
</div>




<p id="notice"><%= notice %></p>

  
      