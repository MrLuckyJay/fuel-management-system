<div class="page">
    <div class="container">

        <%= render  "tools/messages" %>

<div class="row" style="padding: 5vh;">
    <div class="col-md-3 col-md-offset-5">
        <%= link_to 'Stock Up', new_stock_path, class:'btn-success btn-lg ' %>
    </div>
</div>

<h1 align=center>Stocks</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Producttype</th>
      <th>Liters</th>
      <th>User</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.productType %></td>
        <td><%= stock.liters %></td>
       
        <td><%= stock.user.firstname %> <%= stock.user.lastname %></td>
        <td><%= link_to 'Show', stock, class:'btn-success btn-sm' %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock), class:'btn-primary btn-sm' %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


    </div>
</div>
