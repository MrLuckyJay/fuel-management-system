
<div class="thumbnail" style="padding: 15vh; ">

   
   

<%= form_with(model: product, local: true, class:'form-horizontal') do |form| %>

  <%= render  "tools/error", obj:@product %>

    <div class="form-group">
      <%= form.label :productName, class:"col-md-3 control-label" %>
      <div class="col-md-7">
          <%= form.text_field :productName, class:"form-control" %>
      </div>
      
    </div>
  
    <div class="form-group">
      <%= form.label :productPrice, class:"col-md-3 control-label" %>
      <div class="col-md-7">
          <%= form.number_field :productPrice, class:"form-control" %>
      </div>
      
    </div>
  
    
      
    </div>
  
    <div class="form-group">
      <% form.label :user_id, class:"col-md-3 control-label" %>
      <div class="col-md-7">
          <%= form.text_field :user_id, value:@current_user.id, class:"form-control",type:"hidden" %>
      </div>
      
    </div>
  
    <div class="form-group col-md-9 ">
      <div  class="col-md-offset-5">
          <%= form.submit "Add", class:'btn btn-success btn-lg btn-block' %>
      </div>
    </div>
  <% end %>
  


</div>











  
