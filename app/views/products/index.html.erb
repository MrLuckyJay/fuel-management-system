
<div class="page">
    <div class="container">

<%= render  "tools/messages" %>




<div class="row" style="padding: 5vh;">
    <div class="col-md-3 col-md-offset-5">
        <%= link_to 'Add Product', new_product_path, class:'btn-success btn-lg ' %>
    </div>
</div>

<h1 align=center>Products</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Productname</th>
      <th>Productprice</th>
      <th>User</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.productName %></td>
        <td><%= product.productPrice %></td>
        <td><%= product.user.firstname %>
          <%= product.user.lastname %></td>
        <td><%= link_to 'Show', product, class:'btn-success btn-sm' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class:'btn-primary btn-sm' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>



    </div>
</div>
